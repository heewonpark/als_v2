proc init(){
    for i=0,10-1{
	mechname[i] = new String()
    }
    for i = 0, 6-1{
	typename[i] = new String()
    }
    mechname[0].s = "default"
    mechname[1].s = "MsLN"
    mechname[2].s = "MsPN"
    mechname[3].s = "Fukuda"
    mechname[4].s = "HH"
    mechname[5].s = "Pas"
    
    typename[0].s = "default"
    typename[1].s = "BALPN"
    typename[2].s = "C15PN"
    typename[3].s = "MULPN"
    typename[4].s = "LNlla"
    typename[5].s = "LNllb"

    mechanism_flg = 0
    type = 0
    
    //Interval = 0
    Delay = 0
    
    imax =0
    
    IS_SUPERCOMPUTER = 1
    synlist = new List()
    gabalist = new List()
    biophys()
}

